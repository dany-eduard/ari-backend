generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int           @id @default(autoincrement())
  congregation_id Int
  email           String        @unique
  password        String
  first_name      String
  last_name       String
  congregation    Congregation? @relation(fields: [congregation_id], references: [id])
  logActions      LogAction[]

  roles Role[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?
}

model Congregation {
  id     Int      @id @default(autoincrement())
  name   String
  code   String?
  users  User[]
  teams  Team[]
  people Person[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?

  @@unique([name, code])
}

model Team {
  id              Int          @id @default(autoincrement())
  congregation_id Int
  name            String
  congregation    Congregation @relation(fields: [congregation_id], references: [id])
  people          Person[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?

  @@unique([name, congregation_id])
}

enum Sex {
  MALE
  FEMALE
}

model Person {
  id              Int       @id @default(autoincrement())
  congregation_id Int
  team_id         Int
  first_name      String
  last_name       String
  birth_date      DateTime
  baptism_date    DateTime?
  sex             Sex
  number_phone    String?
  is_active       Boolean   @default(true)

  is_elder               Boolean @default(false)
  is_ministerial_servant Boolean @default(false)
  is_regular_pioneer     Boolean @default(false)
  is_special_pioneer     Boolean @default(false)
  is_field_missionary    Boolean @default(false)
  is_other_sheep         Boolean @default(false)
  is_anointed            Boolean @default(false)

  congregation Congregation      @relation(fields: [congregation_id], references: [id])
  team         Team              @relation(fields: [team_id], references: [id])
  reports      PublisherReport[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?

  @@unique([congregation_id, first_name, last_name, birth_date, sex])
}

model PublisherReport {
  id                   Int     @id @default(autoincrement())
  person_id            Int
  service_year         Int
  year                 Int
  month                Int
  participated         Boolean @default(false)
  bible_courses        Int     @default(0)
  is_auxiliary_pioneer Boolean @default(false)
  hours                Int     @default(0)
  notes                String?

  person Person @relation(fields: [person_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?

  @@unique([person_id, service_year, year, month])
}

enum Action {
  CREATE
  UPDATE
  DELETE
}

model LogAction {
  id        Int     @id @default(autoincrement())
  user_id   Int
  action    Action
  entity    String // Nombre de la tabla/modelo (ej: "Person", "Team", etc.)
  entity_id Int? // Opcional porque en DELETE podría no existir más
  before    Json? // Estado anterior (null para CREATE)
  after     Json? // Estado posterior (null para DELETE)
  ip        String?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  deletedAt DateTime?

  // Índices para mejorar rendimiento de consultas
  @@index([user_id])
  @@index([entity, entity_id])
  @@index([action])
  @@index([createdAt])
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String?
  permissions Permission[]
  users       User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?
}

model Permission {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  roles       Role[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?
}
